<h1>Search</h1>
<h2>You asked about "<%= @query %>". Here's what we've got:</h2>

<div class="search-query">
  <%= render "search_bar", query: @query %>

  <ul class="query-results">
  <% @results.each do |result| %>
    <% if result.class == User %>
      <%= render "users/item", user: result, item_type: nil %>
    <% elsif result.class == Game %>
      <%= render "games/item", game: result, with_user: true %>
    <% end %>
  <% end %>
  </ul>
</div>
