<div class="search-query">
  <%= render "search_bar", query: @query %>

  <p class="response-message">
  <% if !@results.empty? %>
    You want to know about "<%= @query %>"? Here's what we've got:
  <% else %>
    We couldn't find anything about "<%= @query %>". Give it another go!
  <% end %>
  </p>

  <ul class="query-results default">
  <% @results.each do |result| %>
    <% if result.class == User %>
      <%= render "users/item", user: result, item_type: :full_stats %>
    <% elsif result.class == Game %>
      <%= render "games/item", game: result, with_user: true %>
    <% end %>
  <% end %>
  </ul>
</div>
