<h1><%= game.escape('title') || '...' %></h1>

<% if (game.escape('image_url_show')) { %>
  <img src="<%= game.escape('image_url_show') %>">
<% } %>

<div class="game-show-controls">
  <div class="game-show-details group">
    <h2><%= game.getSubtitle() %></h2>

    <table>
      <tr>
        <td class="default-key">by</td>
        <% if (game.author) { %>
        <td class="default-value">
          <a href="javascript:void(0)"><%= game.author.getName() %></a>
        </td>
        <% } %>
      </tr>
      <tr>
        <td class="default-key">time</td>
        <td class="default-value">
          <%= Dorkle.Utils.timeString(game.escape('time_limit')) %>
        </td>
      </tr>
      <tr>
        <td class="default-key">source</td>
        <td class="default-value">
          <a href="<%= game.escape('source') %>">
            <%= game.escape('source_host') %></a>
        </td>
      </tr>
    </table>

    <form>
      <button class="round-start button-default">START!</button>
    </form>
  </div>

  <% if (game.author && game.author.id === Dorkle.currentUserId) { %>
  <div class="game-show-manage">
    <h2>Manage Your Game</h2>
    <a class="game-show-manage-update button-default" href="javascript:void(0)">
      EDIT GAME
    </a>
  </div>
  <% } %>
</div>
